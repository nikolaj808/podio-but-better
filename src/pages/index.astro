---
type Event = {
  id: number;
  title: string;
  description: string;
  startTime: Date;
  endTime: Date;
  rsvp: Date;
};

import Layout from "@/layouts/Layout.astro";
import { CalendarPlus } from "lucide-react";
import { Button } from "@/components/ui/button";
import { EventCard } from "@/components/event-card";

const now = new Date();

const events: Event[] = [
  {
    id: 1,
    title: "Spis suppe",
    description: "Vi skal spise så meget suppe",
    startTime: now,
    endTime: now,
    rsvp: now,
  },
  {
    id: 2,
    title: "Lær at binde snørebånd",
    description: "Vi skal spise så meget suppe",
    startTime: now,
    endTime: now,
    rsvp: now,
  },
  {
    id: 3,
    title: "Henneberg invitere til at drikke tog",
    description: "Vi skal spise så meget suppe",
    startTime: now,
    endTime: now,
    rsvp: now,
  },
  {
    id: 4,
    title: "Ice tea genopfyldning",
    description: "Vi skal spise så meget suppe",
    startTime: now,
    endTime: now,
    rsvp: now,
  },
];
---

<Layout title="Podio, but better">
  <Button slot="header-title" transition:name="title">
    <CalendarPlus className="h-4 w-4 mr-2" />
     Create event
  </Button>
  <div class="space-y-4">
    {
      events.map((event) => (
        <EventCard
          title={event.title}
          description={event.description}
          startTime={event.startTime}
          endTime={event.endTime}
          rsvp={event.rsvp}
        />
      ))
    }
  </div>
</Layout>
